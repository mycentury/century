		<!-- <profile>
			<id>test</id>
			<properties>
				<package.target>test</package.target>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile> -->
		<profile>
			<id>prod</id>
			<properties>
