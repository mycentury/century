			</properties>
		</profile>
	</profiles>
	
	<build>
		<finalName>${project.artifactId}-${project.version}-${package.target}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>utf8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
					<!-- <skip>true</skip> -->
					<excludes>
						<exclude>cn/himma/hs/**/*Test.java</exclude>
						<exclude>cn/himma/ws/**/*Test.java</exclude>
						<exclude>cn/himma/util/**/*Test.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<encoding>utf8</encoding>
				</configuration>
				<executions>
					<execution>
						<id>copy-resources-config</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes/config</outputDirectory>
							<resources>
								<resource>
									<directory>profiles/${package.target}</directory>
									<filtering>true</filtering>
									<excludes>
										<exclude>web.xml</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources-main</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
									<includes>
										<include>**/*.xml</include>
										<include>**/*.properties</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<webResources>
						<resource>
							<directory>profiles/${package.target}</directory>
							<filtering>true</filtering>
							<includes>
								<include>web.xml</include>
							</includes>
							<targetPath>WEB-INF</targetPath>
						</resource>
						<resource>
							<directory>target/coverage-report</directory>
							<targetPath>WEB-INF/report</targetPath>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>ws-api</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<jar jarfile="target/${project.name}-ws-${project.version}.jar" compress="true">
									<fileset dir="target/classes">
										<include name="cn/himma/ws/api/**" />
										<include name="cn/himma/ws/req/**" />
										<include name="cn/himma/ws/resp/**" />
									</fileset>
									<fileset dir="src/main/java">
										<include name="cn/himma/ws/api/**" />
										<include name="cn/himma/ws/req/**" />
										<include name="cn/himma/ws/resp/**" />
									</fileset>
								</jar>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>hs-api</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<jar jarfile="target/${project.name}-hs-${project.version}.jar" compress="true">
									<fileset dir="target/classes">
										<include name="cn/himma/hs/api/**" />
									</fileset>
									<fileset dir="src/main/java">
										<include name="cn/himma/hs/api/**" />
									</fileset>
								</jar>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>batch-jar</id>
						<phase>package</phase>
						<goals>
						 <goal>jar</goal>
						</goals>
						<configuration>
							<archive>
								<manifest>
									<mainClass>cn.himma.batch.BatchPortal</mainClass>
									<addClasspath>true</addClasspath>
									<classpathPrefix>lib/</classpathPrefix>
								</manifest>
							</archive>
							<jarName>${project.name}-batch-${batch.version}</jarName>
							<includes>
								<include>cn/himma/batch/**</include>
							</includes>
							<skipTests>true</skipTests>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
